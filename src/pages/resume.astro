---
import Portrait from "../components/Portrait.astro";
import Timeline from "../components/Timeline.astro";
import Layout from "../layouts/Layout.astro";
import portrait from "../images/portrait-300x200.jpg";
---

<Layout title="Welcome to Astro.">
    <div class="container" slot="main">
        <h1>Lebenslauf</h1>
        <div class="portrait">
            <Portrait src={portrait.src} />
        </div>
        <div class="timelines">
            <Timeline
                title="Berufserfahrung"
                events={[
                    {
                        fromDate: new Date(2021, 4),
                        toDate: new Date(2023, 9),
                        description:
                            "Studentischer Entwickler bei EDAG Engineering GmbH",
                    },
                    {
                        fromDate: new Date(2022, 2),
                        toDate: new Date(2023, 3),
                        description:
                            "Studentischer Entwickler bei Green Vision Solutions GmbH",
                    },
                    {
                        fromDate: new Date(2023, 3),
                        toDate: new Date(Date.now()),
                        description:
                            "Studentischer Entwickler bei Green Vision Solutions GmbH",
                    },
                ]}
            />
            <Timeline
                title="Ausbildung"
                events={[
                    {
                        fromDate: new Date(2021, 4),
                        toDate: new Date(2023, 4),
                        description: "Master Technomathematik KIT Karlsruhe",
                    },
                    {
                        fromDate: new Date(2015, 9),
                        toDate: new Date(2020, 9),
                        description: "Bachlor Maschinenbau HS Mannheim",
                    },
                ]}
            />
        </div>
    </div>
</Layout>

<style>
    .container {
        display: flex;
        flex-direction: column;
        gap: 40px;
    }

    .timelines {
        display: flex;
        flex-direction: column;
        gap: 20px;
        display: grid;
        grid-template-columns: 1fr 1fr;
    }
</style>
