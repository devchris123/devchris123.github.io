---
import Layout from "../layouts/Layout.astro";
import { t, changeLanguage } from "i18next";
import { Trans } from "astro-i18next/components";

changeLanguage("de");
---

<Layout title="Welcome to Astro.">
  <div class="intro" slot="main">
    <p>
      <Trans i18nKey="index.p1"><i lang="en">Fullstack Developer</i></Trans>
    </p>
    <p>{t("index.p2")}</p>
    <p>{t("index.p3")}</p>
  </div>
</Layout>

<style>
  .intro {
    background-color: var(--container-low);
    padding: 10px;
    display: flex;
    flex-direction: column;
    gap: 10px;
    max-width: 700px;
  }
</style>
