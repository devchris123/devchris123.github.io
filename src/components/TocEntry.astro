---
interface Props {
  href: string;
  text: string;
}

const { href, text } = Astro.props;
---

<li>
  <a href={href}>{text}</a>
</li>

<style>
  li {
    padding: 10px 0;
  }
  a {
    text-decoration: none;
    color: var(--on-surface);
    padding: 10px;
    padding-left: 20px;
    position: relative;
    right: 20px;
  }
  li:hover {
    color: var(--primary);
    background-color: var(--surface-dim);
  }
  a:hover {
    color: var(--primary);
  }
  :not(a:hover),
  :not(li:hover) {
    transition: var(--fast-transition-col), var(--fast-transition-bg);
  }
  a:hover,
  li:hover {
    transition: var(--fast-transition-col);
  }
</style>
